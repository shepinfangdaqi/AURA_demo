<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewDevice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DDDDDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 设备图标 -->
        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="58dp"
            android:layout_height="79dp"
            android:src="@drawable/image1" /><!-- 替换为实际图标 -->
        <!--        android:contentDescription="Device Icon"-->
        <!--        android:tint="?attr/colorPrimary" />-->

        <!-- 设备信息 -->

        <!-- 三个点的按钮 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Status -->
            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态: 在线"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Mode -->
            <TextView
                android:id="@+id/textViewMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模式: 自动"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Frequency -->
            <TextView
                android:id="@+id/textViewFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频率: 60Hz"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Frequency -->
            <TextView
                android:id="@+id/textViewHengshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="横竖: 横屏"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Frequency -->
            <TextView
                android:id="@+id/textViewPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电量: 100"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonMore"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"

            android:contentDescription="@string/menu_options"
            android:src="@drawable/pencil"
            android:tint="@android:color/black" />



        <!-- 可选：右箭头图标，表示可点击 -->
        <!--        <ImageView-->
        <!--            android:id="@+id/imageViewArrow"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:src="@drawable/image2"-->
        <!--            android:contentDescription="Arrow"-->
        <!--            android:tint="@android:color/darker_gray" />-->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
